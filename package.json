{
  "name": "gas-template",
  "version": "1.0.0",
  "description": "Template for Google Apps Script",
  "scripts": {
    "prepare": "npm-run-all prepare:*",
    "prepare:husky": "husky install",
    "lint": "eslint **/*.ts --fix",
    "format": "prettier **/*.ts --write",
    "login": "clasp login --status",
    "create": "clasp create --rootDir dist",
    "clone": "clasp clone --rootDir dist",
    "open": "clasp open -P dist/.clasp.json",
    "clean": "rimraf dist/*.js dist/appsscript.json",
    "prebuild": "failsafe lint format clean",
    "build": "vite build",
    "prepush": "npm run build",
    "push": "clasp push -P dist/.clasp.json",
    "pull": "clasp pull -P dist/.clasp.json",
    "version": "clasp version -P dist/.clasp.json",
    "versions": "clasp versions -P dist/.clasp.json",
    "deploy": "clasp deploy -P dist/.clasp.json",
    "deployments": "clasp deployments -P dist/.clasp.json",
    "invoke": "clasp run -P dist/.clasp.json",
    "test": "vitest run"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jyoppomu/gas-template.git"
  },
  "keywords": [
    "GAS"
  ],
  "author": "Yuki Yoshida <yuki.yoshida@access-company.com> (https://jyoppomu.github.io/tips/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jyoppomu/gas-template/issues"
  },
  "homepage": "https://github.com/jyoppomu/gas-template#readme",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@google/clasp": "^2.5.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/google-apps-script": "^1.0.76",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.17",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "gas-entry-generator": "^3.0.0",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.0.2",
    "npm-failsafe": "^1.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.55.2",
    "rollup-pluginutils": "^2.8.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "**/*.{ts,mjs}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
